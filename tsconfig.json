{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "baseUrl": ".",
      "declaration": true,
      "declarationDir": "./dist/types",
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
    },
    "include": ["src/**/*.ts",  "src/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
  